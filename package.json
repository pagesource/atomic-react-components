    "rollup-plugin-flow": "^1.1.1",
    "rollup-plugin-flow-entry": "^0.2.0",
    "rollup-plugin-json": "^3.1.0",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-peer-deps-external": "^2.2.0",
    "rollup-plugin-replace": "^2.1.0",
    "rollup-plugin-url": "^2.1.0",
    "rollup-plugin-visualizer": "^0.9.2",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.0",
    "stylelint": "^9.6.0",
    "stylelint-config-prettier": "^4.0.0",
    "stylelint-config-recommended": "^2.1.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.3.2",
    "webpack": "^4.20.2",
    "yarn": "^1.9.4"
  },
  "dependencies": {
    "@babel/runtime": "^7.1.2",
    "classnames": "^2.2.6",
    "flexboxgrid": "^6.3.1",
    "formik": "^1.3.1",
    "normalize.css": "^8.0.0",
    "react": "^16.5.2",
    "react-app-polyfill": "^0.1.3",
    "react-dom": "^16.5.2",
    "react-modal": "^3.6.1",
    "styled-components": "^3.4.9",
    "yup": "^0.26.6"
  },
  "peerDependencies": {
    "@babel/runtime": ">= 7.1.2",
    "classnames": ">= 2.2.6",
    "flexboxgrid": ">= 6.3.1",
    "formik": ">= 1.3.1",
    "normalize.css": ">= 8.0.0",
    "react": ">= 16.5.2",
    "react-app-polyfill": ">= 0.1.3",
    "react-dom": ">= 16.5.2",
    "react-modal": ">= 3.6.1",
    "styled-components": ">= 3.4.9",
    "yup": ">= 0.26.6"
  },
  "engines": {
    "node": ">=8.9.4"
  },
  "jestSonar": {
    "reportPath": "reports/tests",
    "reportFile": "test-reporter.xml",
    "indent": 2
  },
  "resolutions": {
    "eslint-scope": "3.7.1"
  }
}
