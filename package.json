{
  "name": "@xt/atomic-react-pattern-lib",
  "version": "1.0.0",
  "description": "Atomic React Pattern Library",
  "main": "dist/bundle.cjs.js",
  "module": "dist/bundle.esm.js",
  "browser": "dist/bundle.js",
  "style": "dist/styles/index.js",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "test": "cross-env NODE_ENV=test jest --config ./config/jest.config.js",
    "test:updateSnapshot": "yarn run test --updateSnapshot",
    "test:watch": "yarn run test --watch",
    "audit": "yarn run build -- --report",
    "clean:dist": "rimraf dist",
    "build": "yarn run clean:dist && cross-env BABEL_ENV=production rollup --config rollup.config.js",
    "generate": "plop --plopfile generators/index.js",
    "storybook": "start-storybook -s ./lib/static -p 6006",
    "build-storybook": "build-storybook -c .storybook -o ./out",
    "deploy-storybook": "storybook-to-ghpages --existing-output-dir=.out --host-token-env-variable=GITHUB_TOKEN --ci",
    "lint:js": "eslint lib/",
    "lint:js:fix": "yarn run lint:js --fix",
    "lint:css": "stylelint lib/**/*.js",
    "lint:css:fix": "yarn run lint:css --fix",
    "lint": "yarn run lint:js && yarn run lint:css",
    "flow": "flow",
    "flow:install": "flow-typed install",
    "flow:coverage": "flow-coverage-report -i 'lib/**/*.js' -x 'lib/**/*.spec.js' -t html -t json -t text -o reports/flow/ --threshold 70",
    "esdoc": "esdoc -c .esdoc.json",
    "pretty": "prettier --write **/*.{js,json,css}",
    "validate": "yarn run lint && yarn run test && yarn run build",
    "auditNPM": "yarn audit --verbose --json",
    "prepublishOnly": "yarn validate"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pagesource/atomic-react-components.git"
  },
  "bugs": {
    "url": "https://github.com/pagesource/atomic-react-components/issues"
  },
  "keywords": [
    "Atomic",
    "React",
    "Pattern Lib",
    "Living Style Guide"
  ],
  "publishConfig": {
    "access": "public"
  },
  "author": "vinodloha",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/plugin-transform-runtime": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-flow": "^7.0.0",
    "@storybook/addon-actions": "^4.0.8",
    "@storybook/addon-console": "^1.1.0",
    "@storybook/addon-links": "^4.0.8",
    "@storybook/addon-options": "^4.0.8",
    "@storybook/addon-viewport": "^4.0.8",
    "@storybook/addons": "^4.0.8",
    "@storybook/react": "^4.0.8",
    "@storybook/storybook-deployer": "^2.8.1",
    "autoprefixer": "^9.1.5",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.4",
    "babel-plugin-styled-components": "^1.8.0",
    "babel-preset-next": "^1.2.0",
    "cross-env": "^5.2.0",
    "css-loader": "^1.0.0",
    "enzyme": "^3.6.0",
    "enzyme-adapter-react-16": "^1.5.0",
    "enzyme-to-json": "^3.3.4",
    "esdoc": "^1.1.0",
    "esdoc-ecmascript-proposal-plugin": "^1.0.0",
    "esdoc-flow-type-plugin": "^1.1.0",
    "esdoc-jsx-plugin": "^1.0.0",
    "esdoc-standard-plugin": "^1.0.0",
    "eslint": "^5.6.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-compat": "^2.6.1",
    "eslint-plugin-extra-rules": "0.0.0-development",
    "eslint-plugin-flowtype": "^2.50.3",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^21.24.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-react": "^7.11.1",
    "flow-bin": "^0.82.0",
    "flow-coverage-report": "^0.6.0",
    "flow-typed": "^2.5.1",
    "husky": "^1.1.0",
    "jest": "^23.6.0",
    "jest-sonar-reporter": "^2.0.0",
    "jest-styled-components": "^6.2.1",
    "lint-staged": "^7.3.0",
    "mini-css-extract-plugin": "^0.4.3",
    "node-sass": "^4.9.3",
    "plop": "^2.1.0",
    "prettier": "1.14.3",
    "react-storybook-addon-chapters": "^2.1.9",
    "rimraf": "^2.6.2",
    "rollup": "^0.67.4",
    "rollup-plugin-babel": "^4.0.3",
    "rollup-plugin-commonjs": "^9.2.0",
